<view class="page__hd">
  <view class="weui-cell page__title">{{Vote.VoteTitle}}</view>
</view>

<view class="weui-cells weui-cells_after-title">
  <view wx:if="{{Vote.VoteMulti==1}}">
    <checkbox-group bindchange="checkboxChange">
      <label class="weui-cell weui-check__label" wx:for="{{Vote.VoteItemsList}}" wx:key="value">
        <checkbox class="weui-check" value="{{item.ItemName}}" />
        <view class="weui-cell__hd weui-check__hd_in-checkbox">
          <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{!item.checked}}"></icon>
          <icon class="weui-icon-checkbox_success" type="success" size="23" wx:if="{{item.checked}}"></icon>
        </view>
        <view class="weui-cell__bd">{{item.ItemName}}</view>
      </label>
    </checkbox-group>
  </view>
  <view wx:else>
    <radio-group bindchange="radioChange">
      <label class="weui-cell weui-check__label" wx:for="{{radioItems}}" wx:key="value">
        <radio class="weui-check" value="{{item.ItemName}}" />
        <view class="weui-cell__bd">{{item.ItemName}}</view>
        <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
          <icon class="weui-icon-radio" type="success_no_circle" size="16"></icon>
        </view>
      </label>
    </radio-group>
  </view>




</view>